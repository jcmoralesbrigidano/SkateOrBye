<div class="spot-info">
	Address: <%= @spot.address %><br>
	Latituide: <%= @spot.latitude %><br>
	Longitude: <%= @spot.longitude %><br>
	Level: <%= @spot.level %><br>
	Floor quality: <%= @spot.floor_quality %><br>
	Teachers: <%= @spot.teachers %><br>
</div>

<img class="spot-photo" src="<%= @spot.photo %>">
<br><br>
<% if @spot_tricks.empty? %>
<% else %>
	<iframe class="tricks" src="<%= @best_trick_of_the_spot.video %>/embed/simple" width="600" height="600" frameborder="0"></iframe>
<% end %>

<% @spot_tricks.each do |spot_trick| %>
	<% if !(spot_trick.id === @best_trick_of_the_spot.id) %>
		<iframe class="tricks" src="<%= spot_trick.video %>/embed/simple" width="600" height="600" frameborder="0"></iframe>
	<% end %>
	<% if session[:id] %>
		<% @rated = false %>
		<% @ratings = spot_trick.ratings %>

		<% @ratings.each do |rating| %>
			<% if rating.skater_id === session[:id] %>
				<% @rated = true %>
			<% end %>
		<% end %>

		<% if @rated === false %>
			<div class="hearts-container">
			<% for i in 1..5 %>
			
			<img class="hearts" src="<%= asset_path('skateHeartBW.png') %>" data-spot-id="<%= spot_trick.spot_id %>" data-trick-id="<%= spot_trick.id %>" data-hearts="<%= i %>" data-selected="no">
			
			<% end %>
			</div>
		<% else %>
			<p>Ya has puntuado este truco</p>
		<% end %>
	<% else %>
		<span>You need to <a href="<%= login_path %>">login</a> in order to rate a trick</span>
	<% end %>
	<br><br><br><br>
<% end %>
<br>
<% if session[:id] %>
	<a href="<%= new_skater_trick_path(session[:id]) %>?spot_id=<%= @spot.id %>">Add trick</a>
<% else %>
	<span>You need to <a href="<%= login_path %>">login</a> in order to add a trick</span>
<% end %>