<br>
		<%= form_for(:session, url: login_path) do |f| %>
			<%= f.email_field :email, :placeholder => 'Email', class: 'form-control input-correction' %><br><br>
			<%= f.password_field :password, :placeholder => 'Password', class: 'form-control input-correction' %><br><br><br>
			<%= f.submit 'Log in', class: 'action-elements' %>
		<% end %>