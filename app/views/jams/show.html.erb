<h2><%= @jam.name %></h2><br>
<ul class="list-group" style="display:inline-block">
  <li class="list-group-item"><a href="/spots/<%= @spot.id %>"><img class="spot-photo" src="<%= @spot.photo %>"></a></li>
  <li class="list-group-item">Date: <%= @jam.date %></li>
  <li class="list-group-item">Hour: <%= @jam.time %></li>
  <li class="list-group-item">Info: <%= @jam.info %></li>
</ul>
<br>

<h2>Assistants</h2><br>
<ul class="list-group" style="display:inline-block">
<% @attendances.each do |attendance| %>
	<li class="list-group-item">
		<%= Skater.where(id: attendance.skater_id).first.name %> - <%= attendance.role %>
	</li>
<% end %>
</ul><br><br>

<div data-toggle="modal" data-target="#myModal4" data-jam-id="<%= @jam.id %>" class="navigation-elements">Join</div><br>